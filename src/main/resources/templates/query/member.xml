<mapper namespace="com.spring.member.login.dao.MemberDAO">
	
	<select id="login" parameterType="member" resultType="member">
		/* 로그인 처리 */
		select id, pw
		from members
		where id=#{id} and pw=#{pw}
	</select>
	
